---
version: '3'

# This networks section required for the pacakge to be visible to Traefik. 
# DO NOT Remove
networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  app:
    # REQUIRED
    image: 
    restart: unless-stopped
    networks:
      - traefik_network
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.PackageFileName.loadbalancer.server.scheme=http"
      - "traefik.http.services.PackageFileName.loadbalancer.server.port=80"
      - "traefik.http.routers.PackageFileName-http.rule=Host(`PackageFileName.{{ domain }}`)"
      - "traefik.http.routers.PackageFileName-http.entrypoints=http"
      - "traefik.http.routers.PackageFileName-http.middlewares={% if PackageFileName.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% if PackageFileName.https_only %}redirect@file, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.PackageFileName.rule=Host(`PackageFileName.{{ domain }}`)"
      - "traefik.http.routers.PackageFileName.entrypoints=https"
      - "traefik.http.routers.PackageFileName.middlewares={% if PackageFileName.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.PackageFileName.tls=true"
      - "traefik.http.routers.PackageFileName.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.PackageFileName.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.PackageFileName.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.PackageFileName.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.PackageFileName-tor-http.rule=Host(`PackageFileName.{{{ tor_domain }}`)"
      - "traefik.http.routers.PackageFileName-tor-http.entrypoints=http"
      - "traefik.http.routers.PackageFileName-tor-http.middlewares={% if PackageFileName.https_only %}redirect@file, {% else %}{% if PackageFileName.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.PackageFileName-tor.rule=Host(`PackageFileName.{{{ tor_domain }}`)"
      - "traefik.http.routers.PackageFileName-tor.entrypoints=https"
      - "traefik.http.routers.PackageFileName-tor.middlewares={% if PackageFileName.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.PackageFileName-tor.tls=true"
      - "traefik.http.routers.PackageFileName-tor.tls.domains[0].main={{ tor_domain }}"
      - "traefik.http.routers.PackageFileName-tor.tls.domains[0].sans=*.{{ tor_domain }}"
{% endif %}
