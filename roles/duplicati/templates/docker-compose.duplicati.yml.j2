---
version: '2'

networks:
  traefik_network:
    external:
      name: homelabos_traefik
services:
  duplicati:
    networks:
      - traefik_network
    image: linuxserver/duplicati
    container_name: duplicati
    environment:
      - PUID=1000
      - PGID=1000
    volumes:
      - "{{ volumes_root }}/duplicati/config:/config"
      - "{{ volumes_root }}/duplicati/backups:/backups"
      - "{{ volumes_root }}/duplicati/source:/source"
    ports:
      - 8200:8200
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.duplicati.loadbalancer.server.scheme=http"
      - "traefik.http.services.duplicati.loadbalancer.server.port=8200"
      - "traefik.http.routers.duplicati-http.rule=Host(`duplicati.{{ domain }}`)"
      - "traefik.http.routers.duplicati-http.entrypoints=http"
      - "traefik.http.routers.duplicati-http.middlewares={% if duplicati.https_only %}redirect@file, {% else %}{% if duplicati.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.duplicati.rule=Host(`duplicati.{{ domain }}`)"
      - "traefik.http.routers.duplicati.entrypoints=https"
      - "traefik.http.routers.duplicati.middlewares={% if duplicati.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.duplicati.tls=true"
      - "traefik.http.routers.duplicati.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.duplicati.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.duplicati.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.duplicati.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.duplicati-tor-http.rule=Host(`duplicati.{{ tor_domain }}`)"
      - "traefik.http.routers.duplicati-tor-http.entrypoints=http"
      - "traefik.http.routers.duplicati-tor-http.middlewares={% if duplicati.https_only %}redirect@file, {% else %}{% if duplicati.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.duplicati-tor.rule=Host(`duplicati.{{ tor_domain }}`)"
      - "traefik.http.routers.duplicati-tor.entrypoints=https"
      - "traefik.http.routers.duplicati-tor.middlewares={% if duplicati.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.duplicati-tor.tls=true"
      - "traefik.http.routers.duplicati-tor.tls.domains[0].main={{ tor_domain }}"
      - "traefik.http.routers.duplicati-tor.tls.domains[0].sans=*.{{ tor_domain }}"
{% endif %}
    restart: unless-stopped
