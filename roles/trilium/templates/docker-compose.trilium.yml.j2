---
version: '3'

# This networks section required for the pacakge to be visible to Traefik. 
# DO NOT Remove
networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  trilium:
    image: 'zadam/trilium:latest'
    restart: unless-stopped
    volumes:
      - "{{ volumes_root }}/trilium/trilium-data:/root/trilium-data"
    networks:
      - traefik_network
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.trilium.loadbalancer.server.scheme=http"
      - "traefik.http.services.trilium.loadbalancer.server.port=8080"
      - "traefik.http.routers.trilium-http.rule=Host(`trilium.{{ domain }}`)"
      - "traefik.http.routers.trilium-http.entrypoints=http"
      - "traefik.http.routers.trilium-http.middlewares={% if enable_trilium.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% if enable_trilium.https_only %}redirect@file, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.trilium.rule=Host(`trilium.{{ domain }}`)"
      - "traefik.http.routers.trilium.entrypoints=https"
      - "traefik.http.routers.trilium.middlewares={% if enable_trilium.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.trilium.tls=true"
      - "traefik.http.routers.trilium.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.trilium.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.trilium.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.trilium.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.tor.frontend.rule=Host:trilium.{{ tor_domain }}"
      - "traefik.tor.protocol=http"
      - "traefik.tor.port=8080"
{% endif %}