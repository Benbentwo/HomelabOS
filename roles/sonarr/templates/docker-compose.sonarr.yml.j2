---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  # TV Downloader
  sonarr:
    image: linuxserver/sonarr
    networks:
      - traefik_network
    restart: unless-stopped
    environment:
      - PUID={{ uid_output.stdout }}
      - PGID={{ gid_output.stdout }}
      - TZ={{ common_timezone }}
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - "{{ volumes_root }}/sonarr/config:/config"
      - "{{ storage_dir }}/Video/TV:/tv"
      - "{{ storage_dir }}/Downloads/TV:/downloads"
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.sonarr.loadbalancer.server.scheme=http"
      - "traefik.http.services.sonarr.loadbalancer.server.port=8989"
{% if not services.sonarr.https_only %}
      - "traefik.http.routers.sonarr-http.rule=Host(`{{ services.sonarr.subdomain }}.{{ domain }}`)"
      - "traefik.http.routers.sonarr-http.entrypoints=http"
      - "traefik.http.routers.sonarr-http.middlewares={% if services.sonarr.https_only %}redirect@file, {% else %}{% if services.sonarr.auth %}{% if services.authelia.enabled %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
{% endif %}
      - "traefik.http.routers.sonarr.rule=Host(`{{ services.sonarr.subdomain }}.{{ domain }}`)"
      - "traefik.http.routers.sonarr.entrypoints=https"
      - "traefik.http.routers.sonarr.middlewares={% if services.sonarr.auth %}{% if services.authelia.enabled %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.sonarr.tls=true"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.sonarr.tls.certresolver=dns"
      - "traefik.http.routers.sonarr.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.sonarr.tls.domains[0].sans=*.{{ domain }}"
{% else %}
      - "traefik.http.routers.sonarr.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.sonarr-tor-http.rule=Host(`{{ services.sonarr.subdomain }}.{{ tor_domain }}`)"
      - "traefik.http.routers.sonarr-tor-http.entrypoints=http"
      - "traefik.http.routers.sonarr-tor-http.middlewares={% if services.sonarr.auth %}{% if services.authelia.enabled %}authelia-tor@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab-tor@file"
{% endif %}
