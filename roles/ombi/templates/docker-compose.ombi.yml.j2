---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  ombi:
    networks:
      - traefik_network
    image: hotio/ombi
    environment:
      - UID={{ uid }}
      - GID={{ gid }}
      - TZ={{common_timezone}}
    volumes:
      - "{{ volumes_root }}/ombi/config:/config"
    restart: unless-stopped
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.ombi.loadbalancer.server.scheme=http"
      - "traefik.http.services.ombi.loadbalancer.server.port=5000"
      - "traefik.http.routers.ombi-http.rule=Host(`{% if ombi.custom_domain %}{{ ombi.custom_domain }}{% else %}{{ ombi.subdomain + "." + domain }}{% endif %}`)"
      - "traefik.http.routers.ombi-http.entrypoints=http"
{% if not ombi.https_only %}
      - "traefik.http.routers.ombi-http.middlewares={% if ombi.https_only %}redirect@file, {% else %}{% if ombi.auth %}{% if authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
{% else %}
      - "traefik.http.middlewares.redirect-to-https.redirectscheme.scheme=https"
      - "traefik.http.routers.ombi-http.middlewares=redirect-to-https"
{% endif %}
      - "traefik.http.routers.ombi.rule=Host(`{% if ombi.custom_domain %}{{ ombi.custom_domain }}{% else %}{{ ombi.subdomain + "." + domain }}{% endif %}`)"
      - "traefik.http.routers.ombi.entrypoints=https"
      - "traefik.http.routers.ombi.middlewares={% if ombi.auth %}{% if authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.ombi.tls=true"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.ombi.tls.certresolver=dns"
      - "traefik.http.routers.ombi.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.ombi.tls.domains[0].sans=*.{{ domain }}"
{% else %}
      - "traefik.http.routers.ombi.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.ombi-tor-http.rule=Host(`{{ ombi.subdomain }}.{{ tor_domain }}`)"
      - "traefik.http.routers.ombi-tor-http.entrypoints=http"
      - "traefik.http.routers.ombi-tor-http.middlewares={% if ombi.auth %}{% if authelia.enable %}authelia-tor@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab-tor@file"
{% endif %}
