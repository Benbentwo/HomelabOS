---
version: '3'

# This networks section required for the pacakge to be visible to Traefik. 
# DO NOT Remove
networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  app:
    # REQUIRED
    image: roest/docker-speedtest-analyser
    volumes:
      - /var/homelabos/speedtest/data:/var/www/html/data
    restart: unless-stopped
    networks:
      - traefik_network
    environment:
      - SPEEDTEST_PARAMS= --server {{ speedtest.server }} 
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.speedtest.loadbalancer.server.scheme=http"
      - "traefik.http.services.speedtest.loadbalancer.server.port=80"
      - "traefik.http.routers.speedtest-http.rule=Host(`speedtest.{{ domain }}`)"
      - "traefik.http.routers.speedtest-http.entrypoints=http"
      - "traefik.http.routers.speedtest-http.middlewares={% if enable_speedtest.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% if enable_speedtest.https_only %}redirect@file, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.speedtest.rule=Host(`speedtest.{{ domain }}`)"
      - "traefik.http.routers.speedtest.entrypoints=https"
      - "traefik.http.routers.speedtest.middlewares={% if enable_speedtest.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.speedtest.tls=true"
      - "traefik.http.routers.speedtest.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.speedtest.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.speedtest.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.speedtest.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.tor.frontend.rule=Host:speedtest.{{ tor_domain }}"
      - "traefik.tor.protocol=http"
      - "traefik.tor.port=80"
{% endif %}
