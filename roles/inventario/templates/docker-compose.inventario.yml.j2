---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  # Home Inventory Management
  app:
    image: nickbusey/inventario
    restart: unless-stopped
    networks:
      - traefik_network
    environment:
      - MYSQL_DATABASE=inventario
      - MYSQL_TEST_DATABASE=inventario_test
      - MYSQL_USER=inventario
      - MYSQL_PASSWORD="{{lookup('password', './settings/passwords/inventario_db_password chars=digits')}}"
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.inventario.loadbalancer.server.scheme=http"
      - "traefik.http.services.inventario.loadbalancer.server.port=80"
      - "traefik.http.routers.inventario-http.rule=Host(`{{ services.inventario.subdomain }}.{{ domain }}`)"
      - "traefik.http.routers.inventario-http.entrypoints=http"
{% if not services.inventario.https_only %}
      - "traefik.http.routers.inventario-http.middlewares={% if services.inventario.https_only %}redirect@file, {% else %}{% if services.inventario.auth %}{% if services.authelia.enabled %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
{% else %}
      - "traefik.http.middlewares.redirect-to-https.redirectscheme.scheme=https"
      - "traefik.http.routers.inventario-http.middlewares=redirect-to-https"
{% endif %}
      - "traefik.http.routers.inventario.rule=Host(`{{ services.inventario.subdomain }}.{{ domain }}`)"
      - "traefik.http.routers.inventario.entrypoints=https"
      - "traefik.http.routers.inventario.middlewares={% if services.inventario.auth %}{% if services.authelia.enabled %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.inventario.tls=true"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.inventario.tls.certresolver=dns"
      - "traefik.http.routers.inventario.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.inventario.tls.domains[0].sans=*.{{ domain }}"
{% else %}
      - "traefik.http.routers.inventario.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.inventario-tor-http.rule=Host(`{{ services.inventario.subdomain }}.{{ tor_domain }}`)"
      - "traefik.http.routers.inventario-tor-http.entrypoints=http"
      - "traefik.http.routers.inventario-tor-http.middlewares={% if services.inventario.auth %}{% if services.authelia.enabled %}authelia-tor@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab-tor@file"
{% endif %}

  inventario_db:
    image: mariadb
    restart: unless-stopped
    networks:
      - traefik_network
    volumes:
      - "{{ volumes_root }}/inventario_db:/var/lib/mysql"
    environment:
      - MYSQL_ROOT_PASSWORD="{{lookup('password', './settings/passwords/inventario_db_root_password chars=digits')}}"
      - MYSQL_PASSWORD="{{lookup('password', './settings/passwords/inventario_db_password chars=digits')}}"
      - MYSQL_DATABASE=inventario
      - MYSQL_TEST_DATABASE=inventario_test
      - MYSQL_USER=inventario
      - MYSQL_PASSWORD=inventario
