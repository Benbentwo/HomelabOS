---
version: '3'

# This networks section required for the pacakge to be visible to Traefik. 
# DO NOT Remove
networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  app:
    # REQUIRED
    image: linuxserver/mstream
    restart: unless-stopped
    networks:
      - traefik_network
    environment:
      - PUID={{ uid_output.stdout }}
      - PGID={{ gid_output.stdout }}
      - USER={{ default_username }}
      - PASSWORD= {{ default_password }}
      - USE_JSON=false
      - TZ={{ common_timezone }}
    volumes:
      - /var/homelabos/mstream/config:/config
      - {{ storage_dir }}/Music:/music
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.mstream.loadbalancer.server.scheme=http"
      - "traefik.http.services.mstream.loadbalancer.server.port=3000"
      - "traefik.http.routers.mstream-http.rule=Host(`mstream.{{ domain }}`)"
      - "traefik.http.routers.mstream-http.entrypoints=http"
      - "traefik.http.routers.mstream-http.middlewares={% if mstream.auth %}{% if enable_authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% if mstream.https_only %}redirect@file, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.mstream.rule=Host(`mstream.{{ domain }}`)"
      - "traefik.http.routers.mstream.entrypoints=https"
      - "traefik.http.routers.mstream.middlewares={% if mstream.auth %}{% if enable_authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.mstream.tls=true"
      - "traefik.http.routers.mstream.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.mstream.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.mstream.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.mstream.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.tor.frontend.rule=Host:mstream.{{ tor_domain }}"
      - "traefik.tor.protocol=http"
      - "traefik.tor.port=3000"
{% endif %}