---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  # Password Manager
  bitwarden_web:
    image: bitwardenrs/server:latest
    restart: unless-stopped
    networks:
      - traefik_network
    volumes:
      - "{{ volumes_root }}/bitwarden:/data"
    environment:
      - SMTP_HOST={{ smtp.host }}
      - SMTP_FROM={{ smtp.from_email }}
      - SMTP_PORT=587
      - SMTP_SSL=true
      - SMTP_USERNAME={{ smtp.user }}
      - SMTP_PASSWORD={{ smtp.pass }}
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.bitwarden.loadbalancer.server.scheme=http"
      - "traefik.http.services.bitwarden.loadbalancer.server.port=80"
      - "traefik.http.routers.bitwarden-http.rule=Host(`bitwarden.{{ domain }}`)"
      - "traefik.http.routers.bitwarden-http.entrypoints=http"
      - "traefik.http.routers.bitwarden-http.middlewares={% if bitwarden.https_only %}redirect@file, {% else %}{% if bitwarden.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.bitwarden.rule=Host(`bitwarden.{{ domain }}`)"
      - "traefik.http.routers.bitwarden.entrypoints=https"
      - "traefik.http.routers.bitwarden.middlewares={% if bitwarden.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.bitwarden.tls=true"
      - "traefik.http.routers.bitwarden.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.bitwarden.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.bitwarden.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.bitwarden.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.bitwarden-tor-http.rule=Host(`bitwarden.{{ tor_domain }}`)"
      - "traefik.http.routers.bitwarden-tor-http.entrypoints=http"
      - "traefik.http.routers.bitwarden-tor-http.middlewares={% if bitwarden.https_only %}redirect@file, {% else %}{% if bitwarden.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.bitwarden-tor.rule=Host(`bitwarden.{{ tor_domain }}`)"
      - "traefik.http.routers.bitwarden-tor.entrypoints=https"
      - "traefik.http.routers.bitwarden-tor.middlewares={% if bitwarden.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.bitwarden-tor.tls=true"
      - "traefik.http.routers.bitwarden-tor.tls.domains[0].main={{ tor_domain }}"
      - "traefik.http.routers.bitwarden-tor.tls.domains[0].sans=*.{{ tor_domain }}"
{% endif %}
