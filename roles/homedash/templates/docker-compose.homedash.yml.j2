---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  homedash:
    image: gonzague/homedash
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - "{{ volumes_root }}/homedash:/data"
    environment:
      - SALT=ivPWITRH5KPJE5oQQAgxuiCgIxBez6MF6idGmasWTUjZzhEx3iAtnI9TSAo6HAevApRoujC5
    restart: unless-stopped
    networks:
      - traefik_network
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.homedash.loadbalancer.server.scheme=http"
      - "traefik.http.services.homedash.loadbalancer.server.port=4567"
      - "traefik.http.routers.homedash-http.rule=Host(`{{ services.homedash.subdomain }}.{{ domain }}`)"
      - "traefik.http.routers.homedash-http.entrypoints=http"
{% if not services.homedash.https_only %}
      - "traefik.http.routers.homedash-http.middlewares={% if services.homedash.https_only %}redirect@file, {% else %}{% if services.homedash.auth %}{% if services.authelia.enabled %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
{% else %}
      - "traefik.http.middlewares.redirect-to-https.redirectscheme.scheme=https"
      - "traefik.http.routers.homedash-http.middlewares=redirect-to-https"
{% endif %}
      - "traefik.http.routers.homedash.rule=Host(`{{ services.homedash.subdomain }}.{{ domain }}`)"
      - "traefik.http.routers.homedash.entrypoints=https"
      - "traefik.http.routers.homedash.middlewares={% if services.homedash.auth %}{% if services.authelia.enabled %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.homedash.tls=true"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.homedash.tls.certresolver=dns"
      - "traefik.http.routers.homedash.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.homedash.tls.domains[0].sans=*.{{ domain }}"
{% else %}
      - "traefik.http.routers.homedash.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.homedash-tor-http.rule=Host(`{{ services.homedash.subdomain }}.{{ tor_domain }}`)"
      - "traefik.http.routers.homedash-tor-http.entrypoints=http"
      - "traefik.http.routers.homedash-tor-http.middlewares={% if services.homedash.auth %}{% if services.authelia.enabled %}authelia-tor@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab-tor@file"
{% endif %}
