---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  mylar:
    image: linuxserver/mylar
    environment:
      - PUID={{ uid }}
      - PGID={{ gid }}
    volumes:
      - "{{ volumes_root }}/mylar/config:/config"
      - "{{ storage_dir }}/Books/Comics:/comics"
      - "{{ storage_dir }}/Downloads/Books/Comics:/downloads"
    restart: unless-stopped
    networks:
      - traefik_network
    labels:
      # needs to be added as middleware
      #- "traefik.frontend.passHostHeader=true"
      #- "traefik.frontend.headers.SSLRedirect=true"
      #- "traefik.frontend.headers.STSSeconds=315360000"
      #- "traefik.frontend.headers.browserXSSFilter=true"
      #- "traefik.frontend.headers.contentTypeNosniff=true"
      #- "traefik.frontend.headers.forceSTSHeader=true"
      #- "traefik.frontend.headers.SSLHost=${DOMAIN_NAME}"
      #- "traefik.frontend.headers.STSIncludeSubdomains=true"
      #- "traefik.frontend.headers.STSPreload=true"
      #- "traefik.frontend.headers.frameDeny=true"
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.mylar.loadbalancer.server.scheme=http"
      - "traefik.http.services.mylar.loadbalancer.server.port=8090"
      - "traefik.http.routers.mylar-http.rule=Host(`mylar.{{ domain }}`)"
      - "traefik.http.routers.mylar-http.entrypoints=http"
      - "traefik.http.routers.mylar-http.middlewares={% if mylar.https_only %}redirect@file, {% else %}{% if mylar.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.mylar.rule=Host(`mylar.{{ domain }}`)"
      - "traefik.http.routers.mylar.entrypoints=https"
      - "traefik.http.routers.mylar.middlewares={% if mylar.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.mylar.tls=true"
      - "traefik.http.routers.mylar.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.mylar.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.mylar.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.mylar.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.mylar-tor-http.rule=Host(`mylar.{{ tor_domain }}`)"
      - "traefik.http.routers.mylar-tor-http.entrypoints=http"
      - "traefik.http.routers.mylar-tor-http.middlewares={% if mylar.https_only %}redirect@file, {% else %}{% if mylar.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.mylar-tor.rule=Host(`mylar.{{ tor_domain }}`)"
      - "traefik.http.routers.mylar-tor.entrypoints=https"
      - "traefik.http.routers.mylar-tor.middlewares={% if mylar.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.mylar-tor.tls=true"
      - "traefik.http.routers.mylar-tor.tls.domains[0].main={{ tor_domain }}"
      - "traefik.http.routers.mylar-tor.tls.domains[0].sans=*.{{ tor_domain }}"
{% endif %}
