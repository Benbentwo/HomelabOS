      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.minecraft.loadbalancer.server.scheme=http"
      - "traefik.http.services.minecraft.loadbalancer.server.port=0"
      - "traefik.http.routers.minecraft-http.rule=Host(`{{ minecraft.subdomain }}.{{ domain }}`)"
      - "traefik.http.routers.minecraft-http.entrypoints=http"
{% if not minecraft.https_only %}
      - "traefik.http.routers.minecraft-http.middlewares={% if minecraft.https_only %}redirect@file, {% else %}{% if minecraft.auth %}{% if authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
{% else %}
      - "traefik.http.middlewares.redirect-to-https.redirectscheme.scheme=https"
      - "traefik.http.routers.minecraft-http.middlewares=redirect-to-https"
{% endif %}
      - "traefik.http.routers.minecraft.rule=Host(`{{ minecraft.subdomain }}.{{ domain }}`)"
      - "traefik.http.routers.minecraft.entrypoints=https"
      - "traefik.http.routers.minecraft.middlewares={% if minecraft.auth %}{% if authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.minecraft.tls=true"
