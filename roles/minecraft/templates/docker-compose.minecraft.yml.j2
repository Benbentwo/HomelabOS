networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  app:
    image: itzg/minecraft-server
    volumes:
      - "{{ volumes_root }}/minecraft/data:/data"
    environment:
      - EULA=TRUE
    ports:
      - 25565:25565
    restart: unless-stopped
