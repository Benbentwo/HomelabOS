---
version: '3'

# This networks section required for the pacakge to be visible to Traefik. 
# DO NOT Remove
networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  app:
    # REQUIRED
    image: linuxserver/ubooquity
    restart: unless-stopped
    environment:
      - PUID={{ uid_output.stdout }}
      - PGID={{ gid_output.stdout }}
      - TZ={{ common_timezone }}
      - MAXMEM=512
    volumes:
      - /var/homelabos/ubooquity/config:/config
      - {{ storage_dir }}/Books:/books
      - {{ storage_dir }}/Comics:/comics
      - {{ storage_dir }}:/files
    networks:
      - traefik_network
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.ubooquity.loadbalancer.server.scheme=http"
      - "traefik.http.services.ubooquity.loadbalancer.server.port=2202"
      - "traefik.http.routers.ubooquity-http.rule=Host(`ubooquity.{{ domain }}`)"
      - "traefik.http.routers.ubooquity-http.entrypoints=http"
      - "traefik.http.routers.ubooquity-http.middlewares={% if ubooquity.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% if ubooquity.https_only %}redirect@file, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.ubooquity.rule=Host(`ubooquity.{{ domain }}`)"
      - "traefik.http.routers.ubooquity.entrypoints=https"
      - "traefik.http.routers.ubooquity.middlewares={% if ubooquity.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.ubooquity.tls=true"
      - "traefik.http.routers.ubooquity.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.ubooquity.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.ubooquity.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.ubooquity.tls.certresolver=http"
{% endif %}

      - "traefik.http.services.ubooquity-admin.loadbalancer.server.scheme=http"
      - "traefik.http.services.ubooquity-admin.loadbalancer.server.port=2203"
      - "traefik.http.routers.ubooquity-admin-http.rule=Host(`ubooquity-admin.{{ domain }}`)"
      - "traefik.http.routers.ubooquity-admin-http.entrypoints=http"
      - "traefik.http.routers.ubooquity-admin-http.middlewares={% if ubooquity.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% if ubooquity.https_only %}redirect@file, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.ubooquity-admin.rule=Host(`ubooquity-admin.{{ domain }}`)"
      - "traefik.http.routers.ubooquity-admin.entrypoints=https"
      - "traefik.http.routers.ubooquity-admin.middlewares={% if ubooquity.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.ubooquity-admin.tls=true"
      - "traefik.http.routers.ubooquity-admin.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.ubooquity-admin.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.ubooquity-admin.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.ubooquity-admin.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.toruser.frontend.rule=Host:ubooquity.{{ tor_domain }}"
      - "traefik.toruser.protocol=http"
      - "traefik.toruser.port=2202"
      - "traefik.toruser.http.middlewares.add-ubooquity.addprefix.prefix=/ubooquity"

      - "traefik.toradmin.frontend.rule=Host:ubooquity-admin.{{ tor_domain }}"
      - "traefik.toradmin.protocol=http"
      - "traefik.toradmin.port=2203"
      - "traefik.toradmin.http.middlewares.add-ubooquity-admin.addprefix.prefix=/ubooquity/admin"
{% endif %}