---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  lidarr:
    image: hotio/lidarr
    networks:
      - traefik_network
    volumes:
      - "{{ volumes_root }}/lidarr/config:/config"
    environment:
      - TZ={{ common_timezone }}
      - PUID={{ uid }}
      - PGID={{ gid }}
      - UMASK=022
      - VERSION=stable
      - BACKUP=yes
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.lidarr.loadbalancer.server.scheme=http"
      - "traefik.http.services.lidarr.loadbalancer.server.port=8686"
{% if not services.lidarr.https_only %}
      - "traefik.http.routers.lidarr-http.rule=Host(`{{ services.lidarr.subdomain }}.{{ domain }}`)"
      - "traefik.http.routers.lidarr-http.entrypoints=http"
      - "traefik.http.routers.lidarr-http.middlewares={% if services.lidarr.https_only %}redirect@file, {% else %}{% if services.lidarr.auth %}{% if services.authelia.enabled %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
{% endif %}
      - "traefik.http.routers.lidarr.rule=Host(`{{ services.lidarr.subdomain }}.{{ domain }}`)"
      - "traefik.http.routers.lidarr.entrypoints=https"
      - "traefik.http.routers.lidarr.middlewares={% if services.lidarr.auth %}{% if services.authelia.enabled %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.lidarr.tls=true"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.lidarr.tls.certresolver=dns"
      - "traefik.http.routers.lidarr.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.lidarr.tls.domains[0].sans=*.{{ domain }}"
{% else %}
      - "traefik.http.routers.lidarr.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.lidarr-tor-http.rule=Host(`{{ services.lidarr.subdomain }}.{{ tor_domain }}`)"
      - "traefik.http.routers.lidarr-tor-http.entrypoints=http"
      - "traefik.http.routers.lidarr-tor-http.middlewares={% if services.lidarr.auth %}{% if services.authelia.enabled %}authelia-tor@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab-tor@file"
{% endif %}
