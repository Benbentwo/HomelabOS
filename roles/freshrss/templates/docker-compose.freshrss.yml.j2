---
# by default, the FreshRSS image can use SQLite (and thus requires no separate database container)
# some PostgresSQL example information is included for demonstration purposes (especially environment-variable-based configuration)

version: '2.3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  # RSS Reader
  freshrss:
    image: freshrss/freshrss:alpine
    networks:
      - traefik_network
    restart: unless-stopped
    environment:
      - CRON_MIN=*/20
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.freshrss.loadbalancer.server.scheme=http"
      - "traefik.http.services.freshrss.loadbalancer.server.port=80"
      - "traefik.http.routers.freshrss-http.rule=Host(`{{ services.freshrss.subdomain }}.{{ domain }}`)"
      - "traefik.http.routers.freshrss-http.entrypoints=http"
      - "traefik.http.routers.freshrss-http.middlewares={% if services.freshrss.https_only %}redirect@file, {% else %}{% if services.freshrss.auth %}{% if services.authelia.enabled %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.freshrss.rule=Host(`{{ services.freshrss.subdomain }}.{{ domain }}`)"
      - "traefik.http.routers.freshrss.entrypoints=https"
      - "traefik.http.routers.freshrss.middlewares={% if services.freshrss.auth %}{% if services.authelia.enabled %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.freshrss.tls=true"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.freshrss.tls.certresolver=dns"
      - "traefik.http.routers.freshrss.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.freshrss.tls.domains[0].sans=*.{{ domain }}"
{% else %}
      - "traefik.http.routers.freshrss.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.freshrss-tor-http.rule=Host(`{{ services.freshrss.subdomain }}.{{ tor_domain }}`)"
      - "traefik.http.routers.freshrss-tor-http.entrypoints=http"
      - "traefik.http.routers.freshrss-tor-http.middlewares={% if services.freshrss.auth %}{% if services.authelia.enabled %}authelia-tor@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab-tor@file"
{% endif %}
    volumes:
      - "{{ volumes_root }}/freshrss/data:/var/www/FreshRSS/data"

