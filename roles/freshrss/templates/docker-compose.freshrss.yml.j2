---
# by default, the FreshRSS image can use SQLite (and thus requires no separate database container)
# some PostgresSQL example information is included for demonstration purposes (especially environment-variable-based configuration)

version: '2.3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  # RSS Reader
  freshrss:
    image: freshrss/freshrss:alpine
    networks:
      - traefik_network
    restart: unless-stopped
    environment:
      - CRON_MIN=*/20
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.freshrss.loadbalancer.server.scheme=http"
      - "traefik.http.services.freshrss.loadbalancer.server.port=80"
      - "traefik.http.routers.freshrss-http.rule=Host(`freshrss.{{ domain }}`)"
      - "traefik.http.routers.freshrss-http.entrypoints=http"
      - "traefik.http.routers.freshrss-http.middlewares=auth@file, redirect@file, customFrameHomelab@file"
      - "traefik.http.routers.freshrss.rule=Host(`freshrss.{{ domain }}`)"
      - "traefik.http.routers.freshrss.entrypoints=https"
      - "traefik.http.routers.freshrss.middlewares=auth@file, customFrameHomelab@file"
      - "traefik.http.routers.freshrss.tls=true"
      - "traefik.http.routers.freshrss.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.freshrss.tls.domains[0].sans=*.{{ domain }}"
      - "traefik.http.routers.freshrss.tls.certresolver=cloudflare-dns"
{% if enable_tor %}
      - "traefik.tor.frontend.rule=Host:freshrss.{{ tor_domain }}"
      - "traefik.tor.protocol=http"
      - "traefik.tor.port=80"
{% endif %}
    volumes:
      - "{{ volumes_root }}/freshrss/data:/var/www/FreshRSS/data"

