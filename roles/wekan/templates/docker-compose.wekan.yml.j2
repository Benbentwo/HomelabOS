---
version: '3'

# This networks section required for the pacakge to be visible to Traefik. 
# DO NOT Remove
networks:
  traefik_network:
    external:
      name: homelabos_traefik
  wekan-tier:
    driver: bridge

services:
  wekandb:
    image: mongo:3.2.12
    container_name: wekan-db
    restart: unless-stopped
    command: mongod --smallfiles --oplogSize 128
    networks:
      - wekan-tier
    expose:
      - 27017
    volumes:
      - /var/homelabos/wekan/wekan-db:/data/db
      - /var/homelabos/wekan/wekan-db-dump:/dump

  wekan:
    image: quay.io/wekan/wekan
    container_name: wekan-app
    restart: unless-stopped
    networks:
      - traefik_network
      - wekan-tier
    environment:
      - MONGO_URL=mongodb://wekandb:27017/wekan
      - ROOT_URL=http://localhost
    depends_on:
      - wekandb
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.wekan.loadbalancer.server.scheme=http"
      - "traefik.http.services.wekan.loadbalancer.server.port=8080"
      - "traefik.http.routers.wekan-http.rule=Host(`wekan.{{ domain }}`)"
      - "traefik.http.routers.wekan-http.entrypoints=http"
      - "traefik.http.routers.wekan-http.middlewares={% if wekan.https_only %}redirect@file, {% else %}{% if wekan.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.wekan.rule=Host(`wekan.{{ domain }}`)"
      - "traefik.http.routers.wekan.entrypoints=https"
      - "traefik.http.routers.wekan.middlewares={% if wekan.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.wekan.tls=true"
      - "traefik.http.routers.wekan.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.wekan.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.wekan.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.wekan.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.tor.frontend.rule=Host:wekan.{{ tor_domain }}"
      - "traefik.tor.protocol=http"
      - "traefik.tor.port=8080"
{% endif %}
