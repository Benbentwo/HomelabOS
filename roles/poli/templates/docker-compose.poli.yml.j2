---
version: '3'

# This networks section required for the pacakge to be visible to Traefik. 
# DO NOT Remove
networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  app:
    # REQUIRED
    image: zhonglu/poli:0.10.1
    restart: unless-stopped
    networks:
      - traefik_network
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.poli.loadbalancer.server.scheme=http"
      - "traefik.http.services.poli.loadbalancer.server.port=6688"
      - "traefik.http.routers.poli-http.rule=Host(`poli.{{ domain }}`)"
      - "traefik.http.routers.poli-http.entrypoints=http"
      - "traefik.http.routers.poli-http.middlewares={% if poli.https_only %}redirect@file, {% else %}{% if poli.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.poli.rule=Host(`poli.{{ domain }}`)"
      - "traefik.http.routers.poli.entrypoints=https"
      - "traefik.http.routers.poli.middlewares={% if poli.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.poli.tls=true"
      - "traefik.http.routers.poli.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.poli.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.poli.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.poli.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.poli-tor-http.rule=Host(`poli.{{ tor_domain }}`)"
      - "traefik.http.routers.poli-tor-http.entrypoints=http"
      - "traefik.http.routers.poli-tor-http.middlewares={% if poli.https_only %}redirect@file, {% else %}{% if poli.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.poli-tor.rule=Host(`poli.{{ tor_domain }}`)"
      - "traefik.http.routers.poli-tor.entrypoints=https"
      - "traefik.http.routers.poli-tor.middlewares={% if poli.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.poli-tor.tls=true"
      - "traefik.http.routers.poli-tor.tls.domains[0].main={{ tor_domain }}"
      - "traefik.http.routers.poli-tor.tls.domains[0].sans=*.{{ tor_domain }}"
{% endif %}
