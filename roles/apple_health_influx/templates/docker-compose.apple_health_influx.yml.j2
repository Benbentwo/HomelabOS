---
version: '3'

services:
  # Apple Health Data Importer
  apple_health_influx:
    image: nickbusey/healthdata_influx:cron
    restart: unless-stopped
    volumes:
      - "{{ volumes_root }}/nextcloud/data/{{ apple_health_nextcloud_username }}/files/export/:/export/"
      - "{{ volumes_root }}/apple_health_influx/config.yml:/config.yml"
