---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  # Media Server
  jellyfin:
    image: jellyfin/jellyfin
    restart: unless-stopped
    networks:
      - traefik_network
    volumes:
      - "{{ volumes_root }}/jellyfin/config:/config"
      - "{{ storage_dir }}/Music:/media/Music"
      - "{{ storage_dir }}/Video/Movies:/media/Movies"
      - "{{ storage_dir }}/Video/TV:/media/TV"
      - "{{ storage_dir }}/temp:/cache"
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.jellyfin.loadbalancer.server.scheme=http"
      - "traefik.http.services.jellyfin.loadbalancer.server.port=8096"
      - "traefik.http.routers.jellyfin-http.rule=Host(`jellyfin.{{ domain }}`)"
      - "traefik.http.routers.jellyfin-http.entrypoints=http"
      - "traefik.http.routers.jellyfin-http.middlewares={% if jellyfin.https_only %}redirect@file, {% else %}{% if jellyfin.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.jellyfin.rule=Host(`jellyfin.{{ domain }}`)"
      - "traefik.http.routers.jellyfin.entrypoints=https"
      - "traefik.http.routers.jellyfin.middlewares={% if jellyfin.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.jellyfin.tls=true"
      - "traefik.http.routers.jellyfin.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.jellyfin.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.jellyfin.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.jellyfin.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.jellyfin-tor-http.rule=Host(`jellyfin.{{ tor_domain }}`)"
      - "traefik.http.routers.jellyfin-tor-http.entrypoints=http"
      - "traefik.http.routers.jellyfin-tor-http.middlewares={% if jellyfin.https_only %}redirect@file, {% else %}{% if jellyfin.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.jellyfin-tor.rule=Host(`jellyfin.{{ tor_domain }}`)"
      - "traefik.http.routers.jellyfin-tor.entrypoints=https"
      - "traefik.http.routers.jellyfin-tor.middlewares={% if jellyfin.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.jellyfin-tor.tls=true"
      - "traefik.http.routers.jellyfin-tor.tls.domains[0].main={{ tor_domain }}"
      - "traefik.http.routers.jellyfin-tor.tls.domains[0].sans=*.{{ tor_domain }}"
{% endif %}
