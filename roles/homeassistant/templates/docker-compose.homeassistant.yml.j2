---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  # Home Automation
  homeassistant:
    image: homeassistant/home-assistant
    volumes:
      - "{{ volumes_root }}/homeassistant:/config"
      - /etc/localtime:/etc/localtime:ro
      - /etc/letsencrypt:/etc/letsencrypt
    restart: unless-stopped
    networks:
      - traefik_network
    ports:
      - 8123:8123
      - 1883:1883
      # - 8080:8080
      - 51827:51827
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.homeassistant.loadbalancer.server.scheme=http"
      - "traefik.http.services.homeassistant.loadbalancer.server.port=8123"
      - "traefik.http.routers.homeassistant-http.rule=Host(`homeassistant.{{ domain }}`)"
      - "traefik.http.routers.homeassistant-http.entrypoints=http"
      - "traefik.http.routers.homeassistant-http.middlewares=auth@file, redirect@file, customFrameHomelab@file"
      - "traefik.http.routers.homeassistant.rule=Host(`homeassistant.{{ domain }}`)"
      - "traefik.http.routers.homeassistant.entrypoints=https"
      - "traefik.http.routers.homeassistant.middlewares=auth@file, customFrameHomelab@file"
      - "traefik.http.routers.homeassistant.tls=true"
      - "traefik.http.routers.homeassistant.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.homeassistant.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.homeassistant.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.homeassistant.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.tor.frontend.rule=Host:homeassistant.{{ tor_domain }}"
      - "traefik.tor.protocol=http"
      - "traefik.tor.port=8123"
{% endif %}
