---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  pixelfed:
    build: https://github.com/pixelfed/pixelfed.git#dev
    image: pixelfed
    restart: unless-stopped
    networks:
      - traefik_network
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.pixelfed.loadbalancer.server.scheme=http"
      - "traefik.http.services.pixelfed.loadbalancer.server.port=80"
      - "traefik.http.routers.pixelfed-http.rule=Host(`pixelfed.{{ domain }}`)"
      - "traefik.http.routers.pixelfed-http.entrypoints=http"
      - "traefik.http.routers.pixelfed-http.middlewares={% if pixelfed.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% if pixelfed.https_only %}redirect@file, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.pixelfed.rule=Host(`pixelfed.{{ domain }}`)"
      - "traefik.http.routers.pixelfed.entrypoints=https"
      - "traefik.http.routers.pixelfed.middlewares={% if pixelfed.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.pixelfed.tls=true"
      - "traefik.http.routers.pixelfed.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.pixelfed.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.pixelfed.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.pixelfed.tls.certresolver=http"
{% endif %}
    env_file:
      - "{{ volumes_root }}/pixelfed/pixelfed.env"
    volumes:
      - "{{ volumes_root }}/pixelfed/storage:/var/www/storage"

  worker:  # Comment this whole block if HORIZON_EMBED is true.
    build: https://github.com/pixelfed/pixelfed.git#dev
    image: pixelfed
    restart: unless-stopped
    env_file:
      - "{{ volumes_root }}/pixelfed/pixelfed.env"
    volumes:
      - "{{ volumes_root }}/pixelfed/storage:/var/www/storage"
    networks:
      - traefik_network
    command: gosu www-data php artisan horizon

  db:
    image: mariadb:10.4
    restart: unless-stopped
    networks:
      - traefik_network
    environment:
      - MYSQL_DATABASE=pixelfed
      - MYSQL_USER=pixelfed
      - MYSQL_PASSWORD={{ lookup('password', './settings/passwords/pixelfed_db_password chars=digits length=15') }}
      - MYSQL_RANDOM_ROOT_PASSWORD=true
    volumes:
      - "{{ volumes_root }}/pixelfed/mariadb:/var/lib/mysql"

  redis:
    image: redis:5-alpine
    restart: unless-stopped
    volumes:
      - "{{ volumes_root }}/pixelfed/redis:/data"
    networks:
      - traefik_network
    command: >
     --requirepass {{ lookup('password', './settings/passwords/pixelfed_redis_password chars=digits length=15') }}
