---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  # Financial Tracker
  firefly_iii_app:
    restart: unless-stopped
    environment:
      - DB_HOST=firefly_iii_db
      - DB_DATABASE=firefly_db
      - DB_USERNAME=firefly_db
      - DB_PASSWORD={{ lookup('password', './settings/passwords/firefly_db_password chars=digits') }}
      - APP_KEY={{ lookup('password', './settings/passwords/firefly_app_key chars=digits length=31') }}
      - APP_ENV=local
      - APP_URL=https://money.{{ domain }}
      - TZ={{ common_timezone }}
      - ServerName=money.{{ domain }}
    image: jc5x/firefly-iii
    networks:
      - traefik_network
    volumes:
      - "{{ volumes_root }}/firefly/export:/var/www/firefly-iii/storage/export"
      - "{{ volumes_root }}/firefly/upload:/var/www/firefly-iii/storage/upload"
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.money.loadbalancer.server.scheme=http"
      - "traefik.http.services.money.loadbalancer.server.port=80"
      - "traefik.http.routers.money-http.rule=Host(`money.{{ domain }}`)"
      - "traefik.http.routers.money-http.entrypoints=http"
      - "traefik.http.routers.money-http.middlewares=auth@file, redirect@file, customFrameHomelab@file"
      - "traefik.http.routers.money.rule=Host(`money.{{ domain }}`)"
      - "traefik.http.routers.money.entrypoints=https"
      - "traefik.http.routers.money.middlewares=auth@file, customFrameHomelab@file"
      - "traefik.http.routers.money.tls=true"
      - "traefik.http.routers.money.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.money.tls.domains[0].sans=*.{{ domain }}"
      - "traefik.http.routers.money.tls.certresolver=cloudflare-dns"
{% if enable_tor %}
      - "traefik.tor.frontend.rule=Host:money.{{ tor_domain }}"
      - "traefik.tor.protocol=http"
      - "traefik.tor.port=80"
{% endif %}

  firefly_iii_db:
    restart: unless-stopped
    networks:
      - traefik_network
    environment:
      - MYSQL_DATABASE=firefly_db
      - MYSQL_USER=firefly_db
      - MYSQL_PASSWORD="{{lookup('password', './settings/passwords/firefly_db_password chars=digits')}}"
      - MYSQL_RANDOM_ROOT_PASSWORD=yes
    image: mariadb
    volumes:
      - "{{ volumes_root }}/firefly/db:/var/lib/mysql"
