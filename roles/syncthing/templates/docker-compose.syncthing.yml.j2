---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  # Sync Server
  syncthing:
    image: linuxserver/syncthing
    networks:
      - traefik_network
    restart: unless-stopped
    volumes:
      - /var/homelabos/syncthingthing:/config
      - {{ storage_dir }}/Documents/Syncthing:/data
    environment:
      - PGID=1004
      - PUID=1000
    ports:
      - 22000:22000
      - 21027:21027/udp
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.syncthing.loadbalancer.server.scheme=http"
      - "traefik.http.services.syncthing.loadbalancer.server.port=8384"
      - "traefik.http.routers.syncthing-http.rule=Host(`sync.{{ domain }}`)"
      - "traefik.http.routers.syncthing-http.entrypoints=http"
      - "traefik.http.routers.syncthing-http.middlewares={% if syncthing.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% if syncthing.https_only %}redirect@file, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.syncthing.rule=Host(`sync.{{ domain }}`)"
      - "traefik.http.routers.syncthing.entrypoints=https"
      - "traefik.http.routers.syncthing.middlewares={% if syncthing.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.syncthing.tls=true"
      - "traefik.http.routers.syncthing.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.syncthing.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.syncthing.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.syncthing.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.tor.frontend.rule=Host:sync.{{ tor_domain }}"
      - "traefik.tor.protocol=http"
      - "traefik.tor.port=8384"
{% endif %}
