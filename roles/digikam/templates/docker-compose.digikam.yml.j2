---
version: '3'

# This networks section required for the pacakge to be visible to Traefik. 
# DO NOT Remove
networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  digiKam:
    image: rpufky/digikam:6.1.0
    environment:
      - USER_ID={{ uid }}
      - GROUP_ID={{ gid }}
      - TZ={{ common_timezone }}
      - KEEP_APP_RUNNING=1
      - DISPLAY_WIDTH=1920
      - DISPLAY_HEIGHT=1080
      - ENABLE_CJK_FONT=0
      - VNC_PASSWORD="{{lookup('password', './settings/passwords/digikam_vnc_password chars=digits')}}"
    volumes:
      - /var/homelabos/digikam/config:/config
      - {{ storage_dir }}/Pictures:/data
      - /etc/localtime:/etc/localtime:ro
    restart: unless-stopped
    ports:
      - 5800:5800
    networks:
      - traefik_network
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.digikam.loadbalancer.server.scheme=http"
      - "traefik.http.services.digikam.loadbalancer.server.port=5800"
      - "traefik.http.routers.digikam-http.rule=Host(`digikam.{{ domain }}`)"
      - "traefik.http.routers.digikam-http.entrypoints=http"
      - "traefik.http.routers.digikam-http.middlewares={% if digikam.auth %}{% if enable_authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% if digikam.https_only %}redirect@file, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.digikam.rule=Host(`digikam.{{ domain }}`)"
      - "traefik.http.routers.digikam.entrypoints=https"
      - "traefik.http.routers.digikam.middlewares={% if digikam.auth %}{% if enable_authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.digikam.tls=true"
      - "traefik.http.routers.digikam.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.digikam.tls.domains[0].sans=*.{{ domain }}"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.digikam.tls.certresolver=dns"
{% else %}
      - "traefik.http.routers.digikam.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.tor.frontend.rule=Host:digikam.{{ tor_domain }}"
      - "traefik.tor.protocol=http"
      - "traefik.tor.port=5800"
{% endif %}